{#
/**
 * @file
 * Default theme implementation for a webform submission form.
 *
 * Available variables:
 * - form: The webform submission form.
 *
 * @ingroup themeable
 */
#}

<div class="row">
					<div class="col-md-4 col-lg-4 col-xl-4">
						<div class="form-group">
							<div class="custom-control custom-radio">
								{{form.elements.flexbox.document_type}}
							</div>
						</div>
					</div>
					<div class="col-md-8 col-lg-8 col-xl-8">
						<div class="form-group">
							{{form.elements.flexbox.container.title}}
						</div>

						<div class="form-group">
							{{form.elements.flexbox.container.date_issued}}
						</div>

						<div class="row">
							<div class="col-md-6 col-lg-6 col-xl-6">
								<div class="form-group">
									{{form.elements.flexbox.container.flexbox_01.date_acheiced}}
								</div>
							</div>
							<div class="col-md-6 col-lg-6 col-xl-6">
								<div class="form-group">
									{{form.elements.flexbox.container.flexbox_01.valid_until}}
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="upload-options">
					<div class="row justify-content-end">
						<div class="col-md-4 col-lg-4 col-xl-4">
							<div class="form-group">
								<div class="custom-control custom-radio">
									<input type="radio" id="customRadio4" name="upload-options" class="custom-control-input" checked>
									<label class="custom-control-label" for="customRadio4">update geven</label>
								</div>
								<div class="custom-control custom-radio">
									<input type="radio" id="customRadio5" name="upload-options" class="custom-control-input">
									<label class="custom-control-label" for="customRadio5">oneindig geldig</label>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12 col-lg-12 col-xl-12">
						<div class="form-group">
							<div class="icon-field">
								{{form.elements.document_upload}}
								<img src="/themes/custom/custom_sass/images/upload.svg" alt="upload" class="img-fluid icon">
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4 col-lg-4 col-xl-4">
						<div class="form-group">
							{{form.elements.flexbox_02.points}}
						</div>
					</div>
					<div class="col-md-8 col-lg-8 col-xl-8">
						<div class="form-group">
							<div class="icon-field">
								{{form.elements.flexbox_02.upload_evidence}}
								<img src="/themes/custom/custom_sass/images/upload.svg" alt="upload" class="img-fluid icon">
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12 col-lg-12 col-xl-12">
						<div class="form-group">
							{{form.elements.body}}
						</div>
					</div>
				</div>
				<div class="submit-button">
					  {{ form.form_build_id }}
            {{ form.form_token }}
            {{ form.form_id }}
					  {{ form.elements.actions}}
<!--					<button type="submit" class="btn btn-orange">Uploaden</button>-->
				</div>